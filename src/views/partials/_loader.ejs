<!-- Loader Partial -->
<style>
  #page-loader {
    position: fixed;
    top: 0; left: 0;
    width: 100%; height: 100%;
    background: rgba(255,255,255,0.95);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;

    opacity: 1;
    visibility: visible;
    transition: opacity 0.5s ease, visibility 0.5s ease;
  }

  .spinner {
    width: 100px;
    height: 100px;
    border: 6px solid #ddd;
    border-top: 6px solid rgb(33, 33, 161);
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    100% { transform: rotate(360deg); }
  }

  /* When page is loaded, fade out loader */
  body.loaded #page-loader {
    opacity: 0;
    visibility: hidden;
  }
</style>

<div id="page-loader">
  <div class="spinner"></div>
</div>
